/* pages/movie/movie.wxss */
swiper {
    height: 200px;
}
swiper-item{
    
}
swiper-item image{
    width: 100%;
    height: 100%;
}
.bannerTitle{
    font-size: 20px;
    line-height: 25px;
    color: #fff;
    background: rgba(0, 0, 0, 0.3);
    position: absolute;
    top: 0;
    width: 100%;
    padding:0 10px;
    box-sizing: border-box;
    white-space: nowrap;
}
.title{
    text-align: left;
    font-size: 20px;
    color: #666;
    margin: 0 20px;
    padding-top: 10px;
    margin-top: 10px; 
    border-top: 1px solid #ddd;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.label{
    box-sizing: border-box;
    border: 1px solid #e4e4e4;
    border-radius: 4px;
    color: #111;
    margin-bottom: 5px;
    flex: 0 0 23%;
    text-align: center;
    font-size: 13px;
    height: 40px;
    line-height: 40px;
}
.caption{
    width: 100%;
    color: #333;
    font-weight: 700;
    font-size: 20px;
    height: 25px;
}
.titleBig{
    width: 65%;
    margin-bottom: 10px;
}
.imageBig{
    width: 100%;
    height: 150px;
}
.mainTitle{
    width: 32%;
}
.mainName{
    font-size: 14px;
    line-height: 20px;
    color: #333;
}
.mainBrief{
    font-size: 12px;
    line-height: 20px;
    color: #999;
}
.imageMain{
    width: 100%;
    height: 150px;
}