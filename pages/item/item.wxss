/* pages/item/item.wxss */
.title{
    padding: 5px 20px;
    text-align: center;
    font-size: 20px;
    line-height: 25px;
    font-weight: 700;
    background: rgba(0, 0, 0, 0.3);
    color: #fff;
}
.image{
    height: 200px;
    margin: 20px;
    padding: 0 5px 5px 0;
    border-right: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}
.image image{
    width: 100%;
    height: 200px;  
}
.main{
    padding: 20px;
    word-wrap: break-word;
    font-size: 16px;
    line-height: 25px;
}
.limit{
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.news{
    font-size: 20px;
    line-height: 30px;
    font-weight: 700;
    margin-bottom: 10px;
}
.hr{
    width: 100%;
    border-top: 1px solid #ddd;
    margin-top:20px;
}