/*index.wxss*/
.card{
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 5px;
    margin: 10px 20px;
    height: 150px;
    background: #fafafa;
}
.cardbox{
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}
.card image{
    width: 100%;
    margin-top: -10px;
}
.title{
    position: absolute;
    bottom: 0;
    color: #fff;
    background: rgba(0, 0, 0, 0.5);
    font-size: 20px;
    line-height: 25px;
    width: 100%;
}
.Velarium{
    position: absolute;
    z-index: 100;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.returnTop{
    position: fixed;
    z-index: 100;
    bottom: 20px;
    right: 20px;
    width: 30px;
    height: 30px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    overflow: hidden; 
    display: flex;
    align-items: center;
}
.returnTop image{
    height: 60%;
    width: 60%;
    margin: 0 auto;
}