/* pages/audio/audio.wxss */
page{
    text-align: center;
}

.audioPlay{
    
}
.Lyric{
    border: 1px solid #ddd;
    height: 50px;
    padding: 15px 20px;
    margin: 10px 20px;
    font-size: 20px;
    line-height: 20px;
    color: skyblue;
    word-wrap: break-word;
}
.vertical{
    display: inline-block;
    height: 100%;
    vertical-align: middle;
}
.title{
    text-align: left;
    font-size: 20px;
    color: #666;
    padding-left: 20px;
    padding-top: 10px;
    margin-top: 10px; 
    border-top: 1px solid #ddd;
}

scroll-view{
    margin-top: 20px;
}

.music{
    display: flex;
    margin-bottom: 20px;
    padding: 0 20px;
}
.musicImg{
    width: 80px;
    height: 80px;
    
}
.musicImg image{
    width: 100%;
    height: 100%;
}
.musicName{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: right;
    border-bottom: 1px solid #ddd;
    border-right: 1px solid #ddd;
    padding: 5px 20px;
}
.musicAuthor{
    color: #666;
    font-size: 16px;
}